/* Mobile view */
.wrapper {
	display: grid;
	grid-gap: 10px;
	grid-template-areas: 
	"header"
	"subtitle"
	"nav"
	"content"
	"sidebar"
	"footer";
}

/* 2-column view */
@media (min-width: 500px) {
	.wrapper {
		grid-template-columns: 1fr 3fr;
		grid-template-areas: 
		  "header  subtitle"
		  "nav     nav"
		  "sidebar content"
		  "sidebar footer";
	}
	nav ul {
		display: flex;
		justify-content: space-between;
	}
  
	#banner {
		border-right: 3px solid #934E3C;
		border-bottom: none !important;
	}
}

/* 3-column view */
@media (min-width: 700px) {
	.wrapper {
		grid-template-columns: 1fr 4fr 1fr;
		grid-template-areas: 
		  "header subtitle subtitle"
		  "nav    content sidebar"
		  "nav    content sidebar"
		  "footer footer  footer"
	}
	nav ul {
		flex-direction: column;
	}
}

/* Grid area definitions ---> */
.main-head {
	grid-area: header;
	display: flex;
	justify-content: center;
}
.subtitle{
	grid-area: subtitle;
	display: flex;
	background-color: #607D8B;
	align-items: center;
}
.content {
	grid-area: content;
	margin: 0 20px 5px 20px;
}
.main-nav {
	grid-area: nav;
	display: table;
	align-items: flex-start;
	background-color: #FFF9E8;
	border: 1px solid #B8A062;
}
.side {
	grid-area: sidebar;
}

.main-footer {
	grid-area: footer;
	background-color: #FFEDE8;
	border-top: 1px solid #B87462;
    border-bottom: 1px solid #B87462;
}
/* <--- End grid area definitions */

#banner {
	object-fit: fill;
	background-color: #FFFFFF;
	border-bottom: 3px solid #934E3C;
	padding: 20px;
}

#subtitle {
	color: #BBC7CD;
	padding-left: 5%;
}

.side > img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.nav-list {
	list-style-type: none;
	margin: 0;
	padding: 0 10px 0 10px;
